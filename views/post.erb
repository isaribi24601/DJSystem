     margin: 130px 30px 30px 370px; border-radius: 40px;">
<script>
function check(){

	var flag = 0;

	// 設定開始（必須にする項目を設定してください）
	if(document.post.url.value == ""){

		flag = 1;

    }
	// 設定終了
	if(flag){

		window.alert('URLを入力してください'); 
		return false; // 送信を中止
	}
	else{

        window.alert('送信を完了しました');
		return true; // 送信を実行
	}
}
    </script>
    
    <center>
    
    <img src="/images/web_logo.png">
    <form action="/dj" method="post" name="post" onSubmit="return check()">
      <p><input type="text" name="url" style=width:500px;height:40px; placeholder="URLを入力してください"></p>
      <p><button class="submit_button" type="submit">投稿</button></p>
    </form>
    
