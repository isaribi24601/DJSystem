<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>SORACCHI SYSTEM</title>
    
    <style type="text/css">
    
    input[type=text]{
width:200px;
height:10px;
font-size:1.0em;
}
    
    </style>
    
</head>
<body>
    
<script>
function check(){

	var flag = 0;

	// 設定開始（必須にする項目を設定してください）
	if(document.post.url.value == ""){ // 「お名前」の入力をチェック

		flag = 1;

    }
	// 設定終了
	if(flag){

		window.alert('URLを入力してください'); // 入力漏れがあれば警告ダイアログを表示
		return false; // 送信を中止
	}
	else{

        window.alert('送信を完了しましたs');
		return true; // 送信を実行
	}
}
    </script>
    
    <center>
    
     <h1>SORACCHI SYSTEM</h1>
    <form action="/dj" method="post" name="post" onSubmit="return check()">
      <p><input type="text" name="url" style=width:500px;height:40px;　placeholder="URLを入力してください"/></p>
      <p><input type="submit" value="投稿"></p>
    </form>


    </center>

</body>
</html>